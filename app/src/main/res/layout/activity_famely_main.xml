<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_jiating"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="家庭信息"
                    android:textColor="@color/important_text_color"/>

                <TextView
                    android:id="@+id/tv_jiating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_next"
                    android:gravity="center"
                    android:text="未完成"
                    android:textColor="@color/assist_text_color"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>


            <RelativeLayout
                android:id="@+id/rl_dibao"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="低保信息"
                    android:textColor="@color/important_text_color"/>

                <TextView
                    android:id="@+id/tv_dibao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_next"
                    android:gravity="center"
                    android:text="未完成"
                    android:textColor="@color/assist_text_color"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>



            <RelativeLayout
                android:id="@+id/rl_tekun"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="特困信息"
                    android:textColor="@color/important_text_color"/>

                <TextView
                    android:id="@+id/tv_tekun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_next"
                    android:gravity="center"
                    android:text="未完成"
                    android:textColor="@color/assist_text_color"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>




            <RelativeLayout
                android:id="@+id/rl_caoyuan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="草原生态奖励补助信息"
                    android:textColor="@color/important_text_color"/>

                <TextView
                    android:id="@+id/tv_caoyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_next"
                    android:gravity="center"
                    android:text="未完成"
                    android:textColor="@color/assist_text_color"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>


            <RelativeLayout
                android:id="@+id/rl_lingshi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="临时救助信息"
                    android:textColor="@color/important_text_color"/>

                <TextView
                    android:id="@+id/tv_lingshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_next"
                    android:gravity="center"
                    android:text="未完成"
                    android:textColor="@color/assist_text_color"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>



            <RelativeLayout
                android:id="@+id/rl_jingzhun"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:text="精准扶贫信息"
                    android:textColor="@color/important_text_color"/>

                <TextView
                    android:id="@+id/tv_jingzhun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/ic_next"
                    android:gravity="center"
                    android:text="未完成"
                    android:textColor="@color/assist_text_color"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color"/>
            
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>